<h1>Listing Posts</h1>

<%= link_to 'New Post', new_admin_post_path, class: 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="pull-left">Title</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, admin_post_path(post) %></td>
        <td class="pull-right"><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-xs btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
