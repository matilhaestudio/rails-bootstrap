<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.admin.email %></td>
        <td><%= link_to 'Show', admin_post_path(post), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', admin_post_path(post), class: 'btn btn-xs btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_admin_post_path %>
