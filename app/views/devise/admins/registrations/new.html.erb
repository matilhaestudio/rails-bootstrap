<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Cadastro</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, validate: { uniquess: true } %>
        <%= f.input :password, required: true, hint: ("Deve conter pelo menos #{@minimum_password_length} caracteres" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: 'btn btn-block btn-success' %>
      </div>
    <% end %>
    <hr>
    <%= render "devise/admins/shared/links" %>
  </div>
</div>
